{
  "manifest_version": 3,
  "name": "PhishGuard",
  "version": "1.0",
  "description": "A phishing detection and awareness system.",
  "permissions": ["storage", "activeTab", "scripting"],
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "PhishGuard"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/content/dom-scanner.js"],
      "run_at": "document_end"
    }
  ]
}
